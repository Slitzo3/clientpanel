<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Forgot your password?</h1>
      <form action="/restore" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block" id="login">Restore</button>
      </form>
      <p class="lead mt-4">Do you remember it now? <a href="/login">Login then</a></p>
    </div>
  </div>
</div>
